generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id // Clerk User ID (e.g. "user_abc123") 
  rating   Int     @default(1500) // App-specific field 
  imageUrl String?
}

